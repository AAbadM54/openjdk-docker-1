    ARCH="$(uname -m)"; \
    case "${ARCH}" in \
       ppc64el|ppc64le) \
         ESUM='6a40c54002ca456389efa6b2559db19e35986ce5c8edd793e62eaf25197b9ab1'; \
         BINARY_URL='https://github.com/AdoptOpenJDK/openjdk14-binaries/releases/download/jdk14u-2020-03-20-09-48/OpenJDK14U-jdk_ppc64le_linux_openj9_2020-03-20-09-48.tar.gz'; \
         ;; \
       s390x) \
